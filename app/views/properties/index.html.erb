<div class="row">
  <div class="col-md-2"></div>
  <div class=" col-md-8 text-center">
    <p id="notice"><%= notice %></p>

  <h1>Property List</h1>
  <br>
  <%= link_to 'New Property', new_property_path, class: "btn btn-success" %>
  <br/>
  <br/>
  <br/>
  <div style="">
    <table>
    <thead>
      <tr>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Property&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Rent&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;Building age</th>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Address&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Remarks&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th colspan="3">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
      <tr>
        <td><%= property.property %></td>
        <td><%= property.rent %></td>
        <td><%= property.building_age %></td>
        <td><%= property.address %></td>
        <td><%= property.remarks %></td>
        <td><%= link_to 'Show', property, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_property_path(property), class: "btn btn-warning" %></td>
        <td>
          <%= button_to 'Destroy', property, class: "btn btn-danger",method: :delete, data: { confirm: 'Are
          you sure?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  </div>
  
  <br />
  </div>
  <div class="col-md-2"></div>
</div>